{
  "compilerOptions": {
    // "target": "esnext",
    "target": "es2015",
    "module": "ES2015",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    // "paths": {
    //   "@/*": ["src/*"]
    // },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],

    // add
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist"
    // "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
